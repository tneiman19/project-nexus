<br>
<section class="max-w-screen-xl mx-auto bg-gray-50 p-12 rounded-3xl my-8 shadow-lg">
    <h2 class="font-bold text-3xl mb-4">Tags</h2>
    <hr>
    <br>
    <div class="flex flex-wrap">
    {{#each tags as | tag |}}
        <div class="p-3 basis-full sm:basis-1/2 md:basis-1/3 lg:basis-1/4">
            <div class="flex items-center">
                <a href="/api/tags/{{tag.tag_id}}">
                    <img src="{{tag.tag_img}}" alt="" class="w-12 h-12">
                </a>
                <a href="/api/tags/{{tag.tag_id}}" class="ml-4">
                    <h2 class="font-bold text-2xl pb-2">{{tag.tag_name}}</h2>
                </a>
            </div>
            {{!-- <div class="overflow-hidden h-32 text-ellipsis mb-4"> --}}
            <div>
                {{!-- <a href="/api/tags/{{tag.tag_id}}" class="font-bold border border-blue-500 p-2 rounded-lg"></a>  --}}
            <p class="my-8">{{tag.tag_summary}}</p>
            </div>
            {{!-- <hr> --}}
        </div>
    {{/each}}
    </div>
</section>
